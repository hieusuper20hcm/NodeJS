extend ../../layout/index.pug
block content
        h1 Create User
        if errors
         each error in errors
          .alert.alert-danger=error

        form(action="/auth/create" method="POST" enctype="multipart/form-data")
            .form-group
                label(for="name") Name
                input(type="text" name="name" id="name" class="form-control" value= values?values.name:'')
            .form-group
                label(for="phone") Phone Number
                input(type="text" name="phone" id="phone" class="form-control" value= values?values.phone:'')
            .form-group
                label(for="email") Email
                input(type="email" name="email" id="email" class="form-control" value= values?values.email:'')
            .form-group
                label(for="pass") Password
                input(type="password" name="password" id="pass" class="form-control")
            .form-group
                label(for="avatar") Avatar
                input(type="file" name="avatar" id="avatar" class="form-control-file") 
            button.btn.btn-primary.mt-2 Create