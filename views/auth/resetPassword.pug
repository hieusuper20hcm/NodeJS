extend ../../layout/index.pug
block content
        h1 Forget Password
        if errors
         each error in errors
          .alert.alert-danger=error

        form(action="/auth/resetPassword" method="POST")
            .form-group
                label(for="email") Email
                input(type="text" name="email" id="email" class="form-control" value= values?values.email:'')
            .form-group
                label(for="phone") Phone Number
                input(type="tel" name="phone" id="phone" class="form-control")
            .form-group
                label(for="pass") New Password
                input(type="password" name="password" id="pass" class="form-control")
            .form-group
                label(for="passAgain") Enter the password again
                input(type="password" name="passwordAgain" id="passAgain" class="form-control")
            button.btn.btn-primary.mt-2 Update